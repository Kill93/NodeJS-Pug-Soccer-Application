doctype html
html
    head
        meta(charset='utf-8')
        title Premier League 17/18
        link(rel='stylesheet', type='text/css', href='/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='style.css')
    body
        nav.navbar.navbar-inverse
            .container-fluid
                .navbar-header
                    a.navbar-brand(href='#') EPL
                ul.nav.navbar-nav
                    li
                        a(href='/') Home
                    li
                        a(href='/fixtures') Fixtures
                    li.active
                        a(href='#') Teams

        .container.is-fluid
            .section.columns
                .column.is-8.is-offset-2
                    img.image.img-responsive(src="/PL.png")
                    h2.has-text-centered Premier League Teams 2017/2018
                    #allTeams
                        table.table.is-striped.is-bordered.is-narrow.is-hoverable
                            thead
                                tr
                                    th Team

                            tbody
                                for item in teams
                                    tr
                                    td
                                        image.img-responsive(src=item.crestURI)
                                        a(href='team/' + item.teamID)
                                            =item.teamName

