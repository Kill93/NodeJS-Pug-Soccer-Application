doctype html
html
    head
        meta(charset='utf-8')
        title Premier League 17/18
        link(rel='stylesheet', type='text/css', href='/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='style.css')
    body
        nav.navbar.navbar-inverse
            .container-fluid
                .navbar-header
                    a.navbar-brand(href='#') EPL
                ul.nav.navbar-nav
                    li.active
                        a(href='/') Home
                    li
                        a(href='/fixtures') Fixtures
                    li
                        a(href='/all_teams') Teams

        .container.is-fluid
            .section.columns
                .column.is-8.is-offset-2
                    img.image.img-responsive(src="/PL.png")
                    h2.has-text-centered League Table 2017/18
                    table.table.is-striped.is-bordered.is-narrow
                        thead
                            tr
                                th Position
                                th Team
                                th P
                                th W
                                th D
                                th L
                                th F
                                th A
                                th GD
                                th Points

                        tbody
                            for item in data
                                tr
                                td= item.position
                                td
                                    image.img-responsive(src=item.crestURI)
                                    a(href='team/' + item.teamID)
                                        =item.teamName
                                td= item.playedGames
                                td= item.wins
                                td= item.draws
                                td= item.losses
                                td= item.goalsScored
                                td= item.goalsAgainst
                                td= item.goalDifference
                                td= item.points
